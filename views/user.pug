extends layout

block content
  h1 Create User
  br
  form(method='POST' action='' class='pure-form pure-form-aligned')
    div.form-group(class='pure-control-group')
    div.form-group(class='pure-control-group')
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='Login' name='username' required='true' value=(undefined===user ? '' : user.username))
    div.form-group(class='pure-control-group')
      label(for='password') Password:
      input#username.form-control(type='password', placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.password))
    div.form-group(class='pure-control-group')
      label(for='email') Email:
      input#username.form-control(type='email', placeholder='Email' name='email' required='true' value=(undefined===user ? '' : user.email))
    div.form-group(class='pure-control-group')
      label(for='realname') Completed Name:
      input#username.form-control(type='text', placeholder='Completed Name' name='realname' required='true' value=(undefined===user ? '' : user.realname))
    div.form-group(class='pure-controls')
      button.btn.btn-primary(type='submit', class="pure-button pure-button-primary") Accept
